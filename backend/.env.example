# SwingSymphony Backend Environment Variables

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# CORS Configuration
FRONTEND_ORIGIN=http://localhost:5173

# Storage Paths (relative to backend directory)
UPLOAD_DIR=storage/uploaded
RESULTS_DIR=storage/results

# YOC44 Model Configuration
# Path to skeleton_data.json for pro/reference data
SKELETON_DATA_PATH=../skeleton_viewer_standalone/skeleton_data.json

# Job Queue Configuration
MAX_CONCURRENT_JOBS=3

# Redis Configuration (optional, for distributed job queue)
# REDIS_HOST=localhost
# REDIS_PORT=6379
# REDIS_DB=0
# REDIS_PASSWORD=

# File Upload Limits
MAX_UPLOAD_SIZE_MB=100
ALLOWED_VIDEO_FORMATS=mp4,mov,avi,webm

# Logging
LOG_LEVEL=info
